<div class="container profiles">
  <h1>
    <%= t(:title, scope: 'profiles.index') %>
  </h1>
  <div class="row">
    <div class="span6">
      <span class="italic">
        <%= t(:text, scope: 'profiles.index').html_safe %>
      </span>
    </div>
    <div class="span6" style="vertical-align:bottom">
      <%= render partial: 'shared/profile_search' %>
    </div>
  </div>
  <hr>
  <br>
  <div class="row">
    <%= render partial: 'profile', collection: @profiles %>
  </div>
  <div class="row">
    <div class="span12 text-center">
      <%= paginate @profiles %>
    </div>
  </div>
  <div class="row">
    <%= render partial: 'tag' %>
  </div>
</div>
<%= render partial: 'layouts/footer' %>
<br>
